<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CustomerApp.Pages.YourOrderPage"
             BackgroundImageSource="YourOrderPage.png">
    <ContentPage.Content>
        <Grid
            x:Name="yourOrderLayout">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="400" />
                <RowDefinition Height="50" />
                <RowDefinition Height="180" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>
            
            <!--Scroll view to display order items-->
            <ScrollView
                Grid.Row="1"
                Grid.Column="0"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                WidthRequest="260"
                HeightRequest="400">
                <!--Stack layout to place items into-->
                <StackLayout>
                    <!--Temp scroll view items. Delete later-->
                    <BoxView BackgroundColor="Red" HeightRequest="300" WidthRequest="150" />
                    <BoxView BackgroundColor="Green" HeightRequest="300" WidthRequest="150" />
                </StackLayout>
            </ScrollView>

            <!--Grid storing control options, including refill/help buttons-->
            <Grid
                x:Name="controlLayout"
                
                Grid.Row="3"
                Grid.Column="0"
                VerticalOptions="Center"
                HorizontalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="180" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <!--Stack layout for add item and send order buttons-->
                <StackLayout
                    Grid.Row="0"
                    Grid.Column="1"
                    x:Name="orderControlLayout"
                    Orientation="Vertical">
                    <Button
                        x:Name="addItemButton"
                        VerticalOptions="Center"
                        Text="Add Item"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#1fbd85"
                        FontSize="Medium"
                        CornerRadius="15"
                        Clicked="OnAddItemClicked"
                        />
                    
                    <Button
                        x:Name="sendOrderButton"
                        Margin="0,10,0,10"
                        VerticalOptions="Center"
                        Text="Send Order"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#1fbd85"
                        FontSize="Medium"
                        CornerRadius="15"
                        Clicked="OnSendOrderClicked"
                        />
                </StackLayout>

                <!--Refill/help buttons-->
                <StackLayout
                        Grid.Row="0"
                        Grid.Column="0"
                        x:Name="refillLayout"
                        Orientation="Vertical"
                        VerticalOptions="CenterAndExpand">
                    <Label
                            Text="Refill"
                            VerticalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            FontAttributes="Bold"
                            TextColor="Black"
                            BackgroundColor="White"/>
                    <ImageButton
                            x:Name="refillButton"
                            VerticalOptions="CenterAndExpand"
                            CornerRadius="15"
                            Source="plusButton"
                            BackgroundColor="Transparent"
                            WidthRequest="70"
                            HeightRequest="70"
                            Clicked="OnRefillButtonClicked"/>
                </StackLayout>

                <StackLayout
                        Grid.Row="0"
                        Grid.Column="2"
                        x:Name="serverButtonLayout"
                        Orientation="Vertical"
                        VerticalOptions="CenterAndExpand">
                    <Label
                            Text="Call Server"
                            HorizontalTextAlignment="Center"
                            VerticalOptions="CenterAndExpand"
                            FontAttributes="Bold"
                            TextColor="Black"
                            BackgroundColor="White"/>
                    <ImageButton
                            x:Name="serverButton"
                            VerticalOptions="CenterAndExpand"
                            CornerRadius="15"
                            BackgroundColor="Transparent"
                            WidthRequest="70"
                            HeightRequest="70"
                            Source="plusButton"
                            Clicked="OnServerButtonClicked"/>
                </StackLayout>
            </Grid>

        </Grid>
    </ContentPage.Content>
</ContentPage>